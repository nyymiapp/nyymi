<p id="notice"></p>


<h1><%= @company.name %></h1>

<%= link_to("Website", "http://#{@company.website}") %>

<h3>
  <%= @company.description %>
</h3>

<% if current_user and current_user.companies.include? @company %>
	
	<%= link_to "Admin page", administration_company_path(@company), class:"btn btn-primary", style:"color:white;" %>

<% end %>

<h3> Avoimet työpaikat </h3>
<table class="table">
<tbody>
<% @company.open_jobs.each do |o| %>
	<tr>
	<td><%= link_to o.name, o %></td>
	</tr>
</br>
<% end %>
</tbody>
</table>

<% if @company.open_jobs.length == 0 %>
	Ei avoimia työpaikkoja tällä hetkellä.
	</br>
<% end %>

</br>

<h3> Paikka </h3>

<iframe
  width="300"
  height="225"
  frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDHa4KyabobnijWEJ_29JzrrXUae13jJ-4&q=<%=@company.location%>" allowfullscreen>
</iframe>

</br></br>
