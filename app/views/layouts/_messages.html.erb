<%# Rails flash messages styled for Bootstrap 3.0 %>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String)%>

    <div class="alert alert-<%= name.to_s == 'notice' or name.to_s == 'safe' ? 'success' : 'danger' %>" id="angular_notification">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <% if name == "safe" %>
      	<%= content_tag :div, msg.html_safe, :id => "flash_notice" %>
      <% else %>
      	<%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
    </div>
  <% end %>
<% end %>
